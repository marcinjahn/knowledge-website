<style>
.container {
  padding: 1rem;
  width: 900px;
  margin: 2rem auto;
}

ul {
  list-style: none;
  padding: 0;

  display: grid;
  gap: 1.5rem;
  grid-template-columns: repeat(3, 1fr);
}

li {
  justify-self: justify-self;
}

@media only screen and (max-width: 920px) {
  .container {
    width: 100%;
    margin: 1rem 0;
