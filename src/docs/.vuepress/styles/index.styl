.go-to-top
  color: #852424 !important;

// Code (`code`) looks 
:not(pre) > code
  background: rgb(125, 125, 125) !important;
  color: white !important;
  border-radius: 4px !important;

.warning :not(pre) > code
  background: rgb(132, 128, 96)!important;

.tip :not(pre) > code
  background: rgb(111, 130, 140)!important;

.danger :not(pre) > code
  background: rgb(133, 124, 124)!important;

// Mermaid
.mermaid-diagram
  display: flex;
  justify-content: center;

  .branch-label
    color: black !important;
  
  .commit-id
    color: rgba(0,0,0,0) !important;

  circle
    fill: #de4040 !important;
    stroke: #852424 !important;
  
  path
    stroke: rgb(93, 93, 93) !important;

