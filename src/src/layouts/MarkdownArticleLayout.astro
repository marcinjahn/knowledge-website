---
import Sidebar from "../components/sidebar/Sidebar.astro";
import { siteTitle } from "../static/navigation";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={`${frontmatter.title} | ${siteTitle}`}>
    <div class="container">
        <div class="sidebar">
            <Sidebar />
        </div>

        <main>
            <slot />
        </main>
    </div>
</BaseLayout>

<style>
    .container {
        display: flex;
    }

    main {
        margin: 0 auto;
        margin-top: 2rem;
        max-width: 850px;

        background: white;
        padding: 3rem;
    }

    @media only screen and (max-width: 920px) {
        .sidebar {
            display: none;
        }
    }
</style>
