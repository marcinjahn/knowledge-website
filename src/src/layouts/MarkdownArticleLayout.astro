---
import Sidebar from "../components/sidebar/Sidebar.astro";
import { siteTitle } from "../static/navigation";
import BaseLayout from "./BaseLayout.astro";
import type { CollectionEntry } from 'astro:content';
import { getNeighbourArticles } from "./utils/previous-next-article";
import PreviousNextArticles from "../components/PreviousNextArticles.astro";

interface Props {
    slug: string;
    frontmatter: CollectionEntry<'articles'>['data']; // any?
}

const { frontmatter, slug } = Astro.props;
console.log(slug);

const neighbours = await getNeighbourArticles(slug);
console.log(neighbours)
---

<BaseLayout pageTitle={`${frontmatter.title} | ${siteTitle}`}>
    <div class="container">
        <div class="sidebar">
            <Sidebar />
        </div>

        <main>
            <slot />

            <div class="previous-next"><PreviousNextArticles articles={neighbours}/></div> 
        </main>
    </div>



    <div slot="hamburger-panel-content">
        <Sidebar />
    </div>
</BaseLayout>

<style>
    .container {
        display: flex;
    }

    main {
        margin: 2rem auto 0;
        max-width: 820px;

        background: white;
        padding: 3rem;
    }

    .sidebar {
        margin-top: 2rem;
        margin-left: 1rem;
    }
    
    .previous-next {
        border-top: 1px solid rgb(230, 230, 230);
        padding-top: 1rem;
        margin-top: 2rem;
        font-size: 1.1rem;
    }

    @media only screen and (max-width: 920px) {
        .sidebar {
            display: none;
        }

        main {
            width: 100vw;
            min-width: initial;
        }
    }
</style>
