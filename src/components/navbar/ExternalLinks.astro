---
import GithubExternalLink from './external-links/GithubExternalLink.astro';
import LinkedInExternalLink from './external-links/LinkedInExternalLink.astro';

---

<ul>
    <GithubExternalLink />
    <LinkedInExternalLink />
</ul>

<style>
    ul {
        list-style: none;
        padding: 0;
        margin: 0;

        display: flex;
        align-items: center;
        gap: 1.5em;
    }

    li {
        flex-shrink: 0;
    }

    img {
        height: 1.2rem;
        width: 1.2rem;
        margin-bottom: -0.2rem;
    }

    img:hover {
        filter: opacity(75%);
    }

    span {
        color: var(--text-color);
    }

    span:hover {
        color: var(--accent-color)
    }

    a {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
